<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Students</title>
  @vite(['resources/css/app.css', 'resources/js/app.js'])
</head>
<body>
  @if(students)
    <table>
      <tr>
        <th>Index</th>
        <th>First name</th>
        <th>Last name</th>
      </tr>
      @each(student in students)
        <tr>
          <td>{{ student.index }}</td>
          <td>{{ student.firstName }}</td>
          <td>{{ student.lastName }}</td>
        </tr>
      @endeach
    </table>
    @else
      <p>No students available.</p>
    @end
</body>
</html>
